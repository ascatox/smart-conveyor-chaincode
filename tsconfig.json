{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "types": [
      "@theledger/fabric-shim-types",
      "@types/chai"
    ],
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
        "src/**/*"
    ],
  "exclude": [
    "./test/*.ts",
    "./examples"
  ],
  "watch": true
}